<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dxx.dxxfristapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="179dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="VS"
            android:id="@+id/button"
            android:layout_below="@+id/imageView"
            android:layout_toEndOf="@+id/lubanhp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="55dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="luBan1"
            android:id="@+id/lubanname"
            android:layout_marginBottom="28dp"
            android:layout_above="@+id/button"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="luBan  hp"
            android:id="@+id/lubanhp"
            android:layout_above="@+id/button"
            android:layout_alignStart="@+id/lubanname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hanXin3"
            android:id="@+id/textView2"
            android:layout_marginEnd="53dp"
            android:layout_alignTop="@+id/lubanname"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" hanXin3 hp"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignStart="@+id/textView2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shot"
            android:id="@+id/button2"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haha"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button2"
            android:layout_alignEnd="@+id/textView3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mama"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:layout_alignEnd="@+id/textView3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LALA"
            android:id="@+id/button5"
            android:layout_below="@+id/button4"
            android:layout_alignEnd="@+id/textView3" />
    </RelativeLayout>
</RelativeLayout>
